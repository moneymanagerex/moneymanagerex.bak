                $(SRC)/build.c
                $(SRC)/callback.c
                $(SRC)/complete.c
                $(SRC)/date.c
                $(SRC)/delete.c
                $(SRC)/expr.c
                $(SRC)/fault.c
                $(SRC)/fts3.c
                $(SRC)/fts3_hash.c
                $(SRC)/fts3_icu.c
                $(SRC)/fts3_porter.c
                $(SRC)/fts3_tokenizer1.c
                $(SRC)/fts3_tokenizer.c
                $(SRC)/func.c
                $(SRC)/global.c
                $(SRC)/hash.c
                $(SRC)/icu.c
                $(SRC)/insert.c
                $(SRC)/journal.c
                $(SRC)/legacy.c
                $(SRC)/loadext.c
                $(SRC)/main.c
                $(SRC)/malloc.c
                $(SRC)/mem1.c
                $(SRC)/mem2.c
                $(SRC)/mem3.c
                $(SRC)/mem4.c
                $(SRC)/mem5.c
                $(SRC)/mutex.c
                $(SRC)/mutex_os2.c
