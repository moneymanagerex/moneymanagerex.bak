<?xml version="1.0" ?>

<!-- sqlite3 sources -->

<makefile>

    <lib id="sqlite3">

        <warnings>max</warnings>
        <precomp-headers>off</precomp-headers>
        <threading>multi</threading>
        <cxx-exceptions>off</cxx-exceptions>
        <cxx-rtti>off</cxx-rtti>
        <pic>on</pic>

        <set var="SQLITE3_FLAGS">-DSQLITE_CORE -DSQLITE_HAS_CODEC -DSQLITE_ENABLE_COLUMN_METADATA</set>
        <cflags>$(SQLITE3_FLAGS)</cflags>
        <cxxflags>$(SQLITE3_FLAGS)</cxxflags>


        <headers>
                btree.h
                btreeInt.h
                fts3.h
                fts3_hash.h
                fts3_tokenizer.h
                hwtime.h
                keywordhash.h
                mutex.h
                opcodes.h
                os.h
                os_common.h
                os_os2.h
                pager.h
                parse.h
                rtree.h
                sqlite3.h
                sqlite3ext.h
                sqliteInt.h
                sqliteLimit.h
                vdbe.h
                vdbeInt.h
        </headers>
        
       
        <set var="SRC">sqlite</set>

        
        <sources>
                $(SRC)/alter.c
                $(SRC)/analyze.c
                $(SRC)/attach.c
                $(SRC)/auth.c
